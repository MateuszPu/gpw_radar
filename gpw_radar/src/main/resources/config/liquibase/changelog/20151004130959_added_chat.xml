<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet author="mateusz" id="20151004130959-1">
        <createTable tableName="NEWS_MESSAGE">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="link" type="VARCHAR(255)"/>
            <column name="message" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)"/>
            <column name="stock_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet author="mateusz" id="20151004130959-2">
        <createTable tableName="USER_MESSAGE">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="mateusz" id="20151004130959-3">
        <addPrimaryKey columnNames="id"
                       constraintName="NewsMessagePK"
                       tableName="NEWS_MESSAGE"/>
    </changeSet>
    <changeSet author="mateusz" id="20151004130959-4">
        <addPrimaryKey columnNames="id"
                       constraintName="UserMessagePK"
                       tableName="USER_MESSAGE"/>
    </changeSet>

    <changeSet author="mateusz" id="20151004130959-5">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="NEWS_MESSAGE"
                                 constraintName="FK_NEWS_MESSAGE_USER"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 referencedColumnNames="id"
                                 referencedTableName="USERS"/>
    </changeSet>

    <changeSet author="mateusz" id="20151004130959-6">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="USER_MESSAGE"
                                 constraintName="FK_MESSAGE_USER"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 referencedColumnNames="id"
                                 referencedTableName="USERS"/>
    </changeSet>

</databaseChangeLog>
